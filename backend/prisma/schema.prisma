generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Jabatan{
  kd_jabatan String @id @default(cuid())
  nama_jabatan String @db.VarChar(255) @unique

  user User[]
}

model User {
  nip String @db.VarChar(18) @id
  nama String @db.VarChar(255)
  password String @db.VarChar(255) 
  role Role @default(user)
  kd_jabatan String
  nip_atasan String? @db.VarChar(18)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  bawahan User[] @relation("Atasan")
  atasan User? @relation("Atasan", fields: [nip_atasan], references: [nip])

  jabatan Jabatan @relation(fields: [kd_jabatan],references: [kd_jabatan])
  tugas Tugas[]
  laporan Laporan[]
  pengumpulan_tugas PengumpulanTugas[]
}

model Tugas{
  kd_tugas String @id @default(cuid())
  judul String @db.VarChar(255)
  deskripsi String @db.Text
  user_nip String
  status StatusTugas @default(pending)
  deadline DateTime
  prioritas Prioritas
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_nip], references: [nip])
  pengumpulan_tugas PengumpulanTugas[]
}

model Laporan {
  kd_laporan String @id @default(cuid())
  isi_laporan String @db.Text
  judul_laporan String @db.VarChar(255)
  user_nip String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_nip],references: [nip])
}

model PengumpulanTugas {
  kd_pengumpulan_tugas String @id @default(cuid())
  kd_tugas String
  user_nip String
  tanggal_pengumpulan DateTime
  file_path String
  catatan String @db.Text
  status StatusPengumpulanTugas @default(menunggu)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  tugas Tugas @relation(fields: [kd_tugas],references: [kd_tugas])
  user User @relation(fields: [user_nip],references: [nip])
  rating Rating[]
}

model Rating {
  kd_rating String   @id @default(cuid())
  kd_pengumpulan_tugas   String   
  nilai      Float    
  komentar   String?  
  created_at DateTime @default(now())

  tugas      PengumpulanTugas @relation(fields: [kd_pengumpulan_tugas], references: [kd_pengumpulan_tugas])  // Relasi ke tugas yang diberi rating
}


enum Role {
  user
  admin
}

enum Prioritas {
  tinggi 
  sedang
  rendah
}

enum StatusTugas {
  pending 
  in_progress 
  selesai 
  dibatalkan
}

enum StatusPengumpulanTugas {
  menunggu
  disetujui
  revisi
  ditolak
}